bandMate = "ringo"
#length of name
print("The name is this long: ", len(bandMate))

#Name in uppercase
print (bandMate.upper())

#Name in lowercase
print(bandMate.lower())

#Middle Letter
print(bandMate[2])

#2nd-4th letters
print (bandMate[1:3])

#right of letter n
print(bandMate[3:])

#Challenges
print(bandMate.upper()[0])

